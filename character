<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eric the Architect - Canvas Sheet</title>
    <style>
        body { margin: 0; background: #1a1a2e; display: flex; justify-content: center; align-items: center; height: 100vh; overflow: hidden; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        canvas { border: 4px solid #4ecca3; border-radius: 15px; box-shadow: 0 0 30px rgba(78, 204, 163, 0.3); background: #16213e; }
    </style>
</head>
<body>

    <canvas id="sheetCanvas"></canvas>

<script>
    const canvas = document.getElementById('sheetCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = 700;
    canvas.height = 900;

    function drawSheet() {
        // --- BACKGROUND GRADIENT ---
        const grad = ctx.createLinearGradient(0, 0, 0, 900);
        grad.addColorStop(0, '#1a1a2e');
        grad.addColorStop(1, '#16213e');
        ctx.fillStyle = grad;
        ctx.fillRect(0, 0, 700, 900);

        // --- HEADER SECTION ---
        ctx.fillStyle = '#4ecca3';
        ctx.font = 'bold 36px sans-serif';
        ctx.fillText('ERIC THE ARCHITECT', 50, 70);
        
        ctx.font = '18px sans-serif';
        ctx.fillStyle = '#95a5a6';
        ctx.fillText('Class: Artificer (Battle Smith) | Background: Guild IT Specialist', 50, 100);

        // --- ABILITY SCORES ---
        const stats = [
            { label: 'STR', val: 10, color: '#e74c3c' },
            { label: 'DEX', val: 12, color: '#e67e22' },
            { label: 'CON', val: 14, color: '#f1c40f' },
            { label: 'INT', val: 18, color: '#3498db' },
            { label: 'WIS', val: 16, color: '#9b59b6' },
            { label: 'CHA', val: 14, color: '#2ecc71' }
        ];

        stats.forEach((s, i) => {
            const x = 50 + (i * 100);
            const y = 150;
            // Stat Box
            ctx.strokeStyle = s.color;
            ctx.lineWidth = 3;
            ctx.strokeRect(x, y, 80, 100);
            
            ctx.fillStyle = s.color;
            ctx.font = 'bold 16px sans-serif';
            ctx.textAlign = 'center';
            ctx.fillText(s.label, x + 40, y + 30);
            
            ctx.font = 'bold 32px sans-serif';
            ctx.fillStyle = '#fff';
            ctx.fillText(s.val, x + 40, y + 75);
            ctx.textAlign = 'left';
        });

        // --- SKILLS & CERTIFICATIONS SECTION ---
        drawBox(50, 280, 280, 250, 'LEGENDARY SKILLS');
        ctx.fillStyle = '#fff';
        ctx.font = '16px sans-serif';
        const skills = [
            '• ERP Deployment (+4)',
            '• Risk Management (+3)',
            '• Stakeholder Collaboration',
            '• Disaster Recovery Expert',
            '• Agile Methodology Mastery'
        ];
        skills.forEach((text, i) => ctx.fillText(text, 70, 330 + (i * 35)));

        drawBox(370, 280, 280, 250, 'CERTIFICATIONS');
        ctx.fillStyle = '#f1c40f'; // Gold color for certs
        const certs = [
            '• ITIL Foundation',
            '• PMP Exam Candidate',
            '• BS Information Tech',
            '• GPA: 3.7',
            '• Cisco/Active Directory'
        ];
        certs.forEach((text, i) => ctx.fillText(text, 390, 330 + (i * 35)));

        // --- CAREER MILESTONES (THE XP BAR) ---
        drawBox(50, 560, 600, 280, 'THE CHRONICLES OF CRABBENDAM');
        ctx.fillStyle = '#fff';
        const history = [
            '2005: Harland Financial IT Supervisor',
            '2007: Systems Manager, Assoc Inc',
            '2011: Client Ops Manager, FLVS',
            '2022: Director AV Deployments, Beep Inc',
            '2023: Project Manager, Dassault Systèmes'
        ];
        history.forEach((text, i) => {
            // Draw a small milestone node
            ctx.fillStyle = '#4ecca3';
            ctx.beginPath(); ctx.arc(75, 615 + (i * 45), 5, 0, Math.PI*2); ctx.fill();
            // Draw text
            ctx.fillStyle = '#fff';
            ctx.fillText(text, 95, 620 + (i * 45));
        });
    }

    function drawBox(x, y, w, h, title) {
        ctx.strokeStyle = '#4ecca3';
        ctx.lineWidth = 2;
        ctx.strokeRect(x, y, w, h);
        
        ctx.fillStyle = '#4ecca3';
        ctx.fillRect(x, y - 20, ctx.measureText(title).width + 20, 25);
        
        ctx.fillStyle = '#1a1a2e';
        ctx.font = 'bold 16px sans-serif';
        ctx.fillText(title, x + 10, y);
    }

    drawSheet();
</script>
</body>
</html>
